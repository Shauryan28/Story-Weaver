<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Redirect root to dist/index.html
  RewriteRule ^$ dist/index.html [L]

  # If the requested file exists in /dist/, serve it from there
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -f
  RewriteRule ^(.*)$ dist/$1 [L]

  # For any other request that isn't a real file, serve dist/index.html (SPA routing)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . dist/index.html [L]
</IfModule>
